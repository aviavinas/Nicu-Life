<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/colorPrimaryDark"
            android:padding="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <androidx.cardview.widget.CardView
                android:id="@+id/location1"
                app:cardBackgroundColor="@color/colorPrimaryDarker"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_location_white"/>

                    <TextView
                        android:id="@+id/locTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anywhere"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/title"
                android:text="Browse Store"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/storeRecycle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/title"
                android:text="Most Popular"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prodRecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/title"
                android:text="All the Dishes"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/prodMenuRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

</ScrollView>
